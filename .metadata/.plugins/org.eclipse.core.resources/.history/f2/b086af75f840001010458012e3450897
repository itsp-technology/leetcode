package day04;

public class CommonFrothforce {

	public static void main(String[] args) {
		String[] strs = {"flower","tlow","tloght","floght","t"};
		
		//find the sortest String 
		String sortest = strs[0];
		for(int i =1 ; i < strs.length ; i++) {
			if(sortest.length() > strs[i].length()) {
				sortest = strs[i];
			}
		}
		System.out.println(sortest);
		StringBuffer perfix = new StringBuffer();
		
		for(int i=0; i < sortest.length(); i++) {
			char currectCharter = sortest.charAt(i);
			
			//check the char with all string at postion i 
			boolean allMatch = true;
			for(String str : strs) {
				if(str.charAt(i) != currectCharter) {
					allMatch = false;
					break;
				}
			}
			
			if(allMatch) {
				perfix.append(currectCharter);
			}else {
				break;
			}
				
			
	}
		System.out.println(perfix);

		//
	}

}
